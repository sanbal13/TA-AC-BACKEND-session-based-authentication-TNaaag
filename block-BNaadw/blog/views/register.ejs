<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MyDiary | Registration Form</title>
    <!-- CSS -->
    <link rel="stylesheet" href="/stylesheets/tailwind.css" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <div class="container mx-auto px-20">
      <%- include('partials/header') %>
      <main>
        <section class="hero">
          <div class="flex justify-between">
            <h1 class="text-4xl font-bold w-40 text-blue-400">
              Fill in the Registration Form to create an account.
            </h1>
            <ul class="blog-nav flex-column">
              <li class="btn"><a href="/users/login">Login</a></li>
              <li class="btn"><a href="#register">Register</a></li>
              <li class="btn"><a href="/blogs/#all-blogs">View Blogs</a></li>
            </ul>
          </div>
        </section>
        <section class="form">
          <form action="/users/register" method="post">
            <h3 id="register">Registration Form</h3>
            <% var errorArray = [] 
               if(error) 
               {  error = error.slice(24);
                  errorArray = error.split(',');
                }  
                errorArray.forEach((err) => { 
            if(err.startsWith('firstName')) { %>
            <p class="error">
              <%= err.trim().slice("firstName: Path".length + 1) %>
            </p>
            <% }}) %>
            <input
              type="text"
              name="firstName"
              id="firstName"
              placeholder="Enter your first name"
            />
            <% errorArray.forEach((err) => { 
            if(err.trim().startsWith('lastName')) { %>
            <p class="error">
              <%= err.trim().slice("lastName: Path".length + 1) %>
            </p>
            <% }}) %>
            <input
              type="text"
              name="lastName"
              id="lastName"
              placeholder="Enter your last name"
            />
            <% errorArray.forEach((err) => { 
            if(err.trim().startsWith('email')) { %>
            <p class="error">
              <%= err.trim().slice("email: Path".length + 1) %>
            </p>
            <% } %> <% }) %>
            <input
              type="email"
              name="email"
              id="email"
              placeholder="Enter your email"
            />
            <% errorArray.forEach((err) => { %> <%
            if(err.trim().startsWith('password')) { %>
            <p class="error">
              <%= "Password must be of minimum 4 characters" %>
            </p>
            <% } %> <% }) %>
            <input
              type="password"
              name="password"
              id="password"
              placeholder="Enter your password"
            />
            <input
              type="text"
              name="city"
              id="city"
              placeholder="Enter your city"
            />
            <button type="submit">Register</button>
          </form>
        </section>
      </main>
      <%- include('partials/footer') %>
    </div>
  </body>
</html>
